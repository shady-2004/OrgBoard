{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "module": "CommonJS",

    /* Paths */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Strictness */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Module Resolution */
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* Source Maps (for debugging) */
    "sourceMap": true
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist"]
}
